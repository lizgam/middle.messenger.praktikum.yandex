{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./src/",
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings/app.d.ts"
        ],
        "declaration": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
    }
}
